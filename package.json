{
    "name": "@openbook-studio/workspace",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "workspaces": [
        "openbook/frontend/*",
        "openbook/libraries/*"
    ],
    "scripts": {
        "redis": "redis-server",
        "runserver": "src/manage.py runserver",
        "maildev": "maildev -s 1025 -w 8887",
        "frontend": "cd src/frontend && npm run watch",
        "libraries": "cd src/libraries && npm run watch",
        "start": "conc -n redis,django,fake-smtp,frontend,libraries -c auto \"npm run redis\" \"npm run runserver\" \"npm run maildev\" \"npm run frontend\" \"npm run libraries\"",
        "build:frontend": "cd src/libraries && npm run build",
        "build:libraries": "cd src/frontend && npm run build",
        "build": "npm run build:frontend && npm run build:libraries"
    },
    "devDependencies": {
        "@types/node": "^20.14.8",
        "@typescript-eslint/eslint-plugin": "^7.13.1",
        "conc": "^0.0.3",
        "concurrently": "^8.2.2",
        "esbuild": "^0.21.5",
        "esbuild-plugin-less": "^1.3.5",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-unused-imports": "^3.2.0",
        "glob": "^11.0.0",
        "jszip": "^3.10.1",
        "maildev": "^2.1.0",
        "prettier": "^3.3.2",
        "shelljs": "^0.8.5",
        "tsx": "^4.15.7",
        "typescript": "^5.5.2",
        "yaml": "^2.7.0"
    }
}
